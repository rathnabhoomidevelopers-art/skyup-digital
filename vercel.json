{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "skyupdigitalsolutions.com" }
      ],
      "destination": "https://www.skyupdigitalsolutions.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    { "source": "/robots.txt", "destination": "/robots.txt" },
    { "source": "/api/(.*)", "destination": "https://skyup-backend.vercel.app/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
